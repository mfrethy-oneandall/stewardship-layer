{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "advisory_packet.v1",
    "title": "AdvisoryPacket.v1",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "schema_version",
        "request_id",
        "timestamp",
        "source",
        "recommendation",
        "risk_level",
        "rationale",
        "tests",
        "required_approvals"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "v1"
        },
        "request_id": {
            "type": "string",
            "format": "uuid"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "source": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "service",
                "instance"
            ],
            "properties": {
                "service": {
                    "type": "string",
                    "enum": [
                        "nathan"
                    ]
                },
                "instance": {
                    "type": "string"
                }
            }
        },
        "recommendation": {
            "type": "string",
            "enum": [
                "proceed",
                "proceed_with_confirmation",
                "defer",
                "refuse",
                "needs_info"
            ]
        },
        "risk_level": {
            "type": "string",
            "enum": [
                "low",
                "med",
                "high",
                "critical"
            ]
        },
        "rationale": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1500
        },
        "unknowns": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 300
            },
            "maxItems": 25
        },
        "tests": {
            "type": "array",
            "minItems": 1,
            "maxItems": 25,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "step",
                    "intent",
                    "risk",
                    "destructive"
                ],
                "properties": {
                    "step": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 1000
                    },
                    "intent": {
                        "type": "string",
                        "maxLength": 500
                    },
                    "how": {
                        "type": "string",
                        "maxLength": 1200
                    },
                    "expected_signal": {
                        "type": "string",
                        "maxLength": 500
                    },
                    "risk": {
                        "type": "string",
                        "enum": [
                            "low",
                            "med",
                            "high"
                        ]
                    },
                    "destructive": {
                        "type": "boolean"
                    }
                }
            }
        },
        "if_then_branches": {
            "type": "array",
            "maxItems": 15,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "if",
                    "then"
                ],
                "properties": {
                    "if": {
                        "type": "string",
                        "maxLength": 400
                    },
                    "then": {
                        "type": "string",
                        "maxLength": 700
                    }
                }
            }
        },
        "required_approvals": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "confirmation",
                "steward_key"
            ],
            "properties": {
                "confirmation": {
                    "type": "boolean"
                },
                "steward_key": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "required",
                        "scope",
                        "ttl_seconds"
                    ],
                    "properties": {
                        "required": {
                            "type": "boolean"
                        },
                        "scope": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "maxLength": 100
                            },
                            "maxItems": 20
                        },
                        "ttl_seconds": {
                            "type": "integer",
                            "minimum": 60,
                            "maximum": 86400
                        }
                    }
                }
            }
        },
        "suggested_user_question": {
            "type": "string",
            "maxLength": 250
        },
        "notes_for_audit": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 300
            },
            "maxItems": 25
        },
        "swarm_trace_refs": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 200
            },
            "maxItems": 20
        }
    }
}